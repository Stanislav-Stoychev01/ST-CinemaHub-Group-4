@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CinemaHub.Areas.Admin.Pages.TicketPriceModel
@{
    Layout = "../_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Days of the week</th>
                    <th scope="col">Screening type</th>
                    <th scope="col">Price</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!--ko foreach: base.items-->
                <tr>
                    <th scope="row" data-bind="text: $index()+1"></th>
                    <td data-bind="text: daysOfTheWeek"></td>
                    <td data-bind="text: screeningType"></td>
                    <td data-bind="text: price"></td>
                    <td>
                        <button class="btn btn-warning" data-bind="click: $root.editClick">Edit</button>
                    </td>
                </tr>
                <!--/ko-->
            </tbody>
        </table>
    </div>
</div>


<!-- EDIT MODAL -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bind="with: editModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <!--ko ifnot: $parent.id-->
                    <span>Create new genre</span>
                    <!--/ko-->
                    <!--ko if: $parent.id-->
                    <span>Edit ticket price</span>
                    <!--/ko-->
                </h5>
                <button type="button" class="btn-close" data-coreui-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" data-bind="with: form">
                <div class="row">
                    <div class="col-12 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="" placeholder="Name" data-bind="value: daysOfTheWeek">
                            <label for="">Days of the week</label>
                        </div>
                    </div>
                    <div class="col-12 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="" placeholder="Name" data-bind="value: screeningType">
                            <label for="">Screening type</label>
                        </div>
                    </div>
                    <div class="col-12 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="" placeholder="Name" data-bind="value: price">
                            <label for="">Price</label>
                        </div>
                    </div>
                    <!--ko if: $parent.id-->
                    <div class="col-12 mt-2">
                        <div class="form-floating">
                            <input type="text" class="form-control" disabled="disabled" id="" placeholder="Created on" data-bind="value: createdOn">
                            <label for="">Created on</label>
                        </div>
                    </div>
                    <!--/ko-->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-coreui-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: saveBtn">Save changes</button>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="/lib/admin/js/pages/ticketPrice-list.js"></script>
    <script src="/lib/admin/js/pages/ticketPrice-edit.js"></script>
}
