@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CinemaHub.Areas.Admin.Pages.UsersModel
@{
    Layout = "../_Layout.cshtml";
}
<div class="card">
    <div class="p-2">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Email address</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="search email" data-bind="value: email">
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Name</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="search name" data-bind="value: name">
                </div>
            </div>
        </div>
    </div>


    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First name</th>
                    <th scope="col">Last last</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!--ko foreach: base.items-->
                <tr>
                    <th scope="row" data-bind="text: $index()+1"></th>
                    <td data-bind="text: firstName"></td>
                    <td data-bind="text: lastName"></td>
                    <td data-bind="text: email"></td>
                    <td data-bind="text: role"></td>
                    <td data-bind="text: status"></td>
                    <td ><button class="btn btn-warning" data-bind="click: $root.editClick">Edit</button> 
                        <!--ko if: status !="Retired" --> <button class="btn btn-danger" data-bind="click: $root.deleteClick">Delete</button><!--/ko-->
                        </td>
                </tr>
                <!--/ko-->
            </tbody>
        </table>
        <partial name="../PartialViews/Pagination.cshtml" />
    </div>
</div>


<!-- EDIT MODAL -->
<div class="modal fade" id="userEditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bind="with: editModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><span data-bind="text: form.firstName"></span> <span data-bind="text: form.lastName"></span></h5>
                <button type="button" class="btn-close" data-coreui-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" data-bind="with: form">
                <div class="row">
                    <div class="col-6 mt-2">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="" placeholder="First name" data-bind="value: firstName">
                                <label for="">First name</label>
                             </div>
                    </div>
                    <div class="col-6 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="" placeholder="Last name" data-bind="value: lastName">
                            <label for="">Last name</label>
                        </div>
                    </div>
                    <div class="col-6 mt-2">
                        <div class="form-floating mb-3">
                            <input type="email" disabled="disabled" class="form-control" id="" placeholder="Email" data-bind="value: email">
                            <label for="">Email</label>
                        </div>
                    </div>
                    <div class="col-6 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="" placeholder="Email" data-bind="value: phoneNumber">
                            <label for="">Phone number</label>
                        </div>
                    </div>
                    <div class="col-6 mt-2">
                        <div class="form-floating">
                            <select class="form-select" id="" aria-label="Default select example" data-bind="value: role">
                                <option value="User">User</option>
                                <option value="Admin">Admin</option>
                                <option value="Cashier">Cashier</option>
                            </select>
                            <label for="">Role</label>
                            </div>
                        </div>
                    <div class="col-6 mt-2">
                        <div class="form-floating">
                            <input type="text" class="form-control" disabled="disabled" id="" placeholder="Status" data-bind="value: status">
                                <label for="">Status</label>
                        </div>
                    </div>
                    <div class="col-12 mt-2">
                        <div class="form-floating">
                            <input type="text" class="form-control" disabled="disabled" id="" placeholder="Created on" data-bind="value: createdOn">
                                <label for="">Created on</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-coreui-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: saveBtn">Save changes</button>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <script src="/lib/admin/js/pages/pagination-list-base.js"></script>
    <script src="/lib/admin/js/pages/users-list.js"></script>
    <script src="/lib/admin/js/pages/users-edit.js"></script>
}
