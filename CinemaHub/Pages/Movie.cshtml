@page
@model CinemaHub.Pages.MovieModel
@{
}

@section AddToBody
{
    <div class="loading" id="loader">Loading&#8230;</div>
}
<!--ko with: movie-->
<h1 data-bind="text: name"></h1>
<div class="black">
    <iframe data-bind="attr:{src: 'https://www.youtube.com/embed/' + trailerId}" height="450px" width="1150" allowfullscreen></iframe>
</div>
<h2>Повече информация:</h2>
<div class="image" style="float: right;">
    <img data-bind="attr:{src: imageUrl}" height="350px" width="230">
</div>
<div class="relative">
    <!--ko if: premiere-->
    <div id="date">
        <b>
            <p class="color">Премиерна дата</p>
        </b>
        <p class="size" data-bind="text: premiere"></p>
    </div>
    <!--/ko-->
    <div id="time">
        <b>
            <p class="color">Времетраене</p>
        </b>
        <p class="size"><span data-bind="text: duration"></span> минути</p>
    </div>
</div>
<div id="description">
    <p class="color" data-bind="text: description">
    </p>
</div>
<div class="information">
    <table class="information">
        <tr>
            <td>ОРИГ. ЗАГЛАВИЕ:</td>
            <td data-bind="text: name"></td>
        </tr>
        <tr>
            <td>ЖАНР:</td>
            <td>
                <!--ko foreach: genres-->
                <span data-bind="text: $data"></span>
                <!--/ko-->
            </td>
        </tr>
        <tr>
            <td>АКТЬОРИ:</td>
            <td data-bind="text: actors"></td>
        </tr>
        <!--ko if: screeningTypes-->
        <tr>
            <td>ИЗЛЪЧВА СЕ В:</td>
            <td data-bind="text: screeningTypes">2D</td>
        </tr>
        <!--/ko-->
    </table>
</div>
<!--/ko-->


<h2 class="mt-5 mb-3">Прожекции:</h2>
<section class="intro mt-2 mb-5" style="height: unset">
    <div class="gradient-custom-2">
        <div class="mask d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-dark table-bordered mb-0">
                                <thead>
                                <tr>
                                    <th scope="col">Заглавие</th>
                                    <th scope="col">Формат</th>
                                    <th scope="col">Продължителност</th>
                                    <th scope="col">Ден</th>
                                    <th scope="col">Час</th>
                                    <th scope="col"></th>
                                </tr>
                                </thead>
                                <tbody>
                                <!--ko foreach: base.items-->
                                <tr>
                                    <th scope="row" data-bind="text: movie.name"></th>
                                    <td data-bind="text: type"></td>
                                    <td data-bind="text: movie.duration"></td>
                                    <td data-bind="text: getDate(dateTime)"></td>
                                    <td data-bind="text: getHours(dateTime)"></td>
                                    <td><button class="btn btn-success">Запази място</button></td>
                                </tr>
                                <!--/ko-->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <nav aria-label="Page navigation example" style="margin-top: 30px;display: flex;justify-content: space-between;align-items: center;">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#" data-bind="click: base.prevPage">Previous</a></li>
                        <!--ko foreach: base.pages-->
                        <li class="page-item" data-bind="css:{active: isActive}"><a class="page-link" href="#" data-bind="text: number, click: $root.base.setPage"></a></li>
                        <!--/ko-->
                        <li class="page-item"><a class="page-link" href="#" data-bind="click: base.nextPage">Next</a></li>
                    </ul>
                    <div>Total records: <span data-bind="text: base.totalCount"></span></div>
                </nav>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script>var movieId = "@ViewData["Id"]"</script>
    <script src="/lib/admin/js/pages/baseService.js"></script>
    <script src="/lib/admin/js/pages/pagination-list-base.js"></script>
    <script src="/lib/frontend/js/movie.js"></script>


}
