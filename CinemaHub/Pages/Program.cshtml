@page
@model CinemaHub.Pages.ProgramModel
@{
}

@section AddToBody
{
    <div class="loading" id="loader">Loading&#8230;</div>
}
<h2 class="mt-5 mb-3">Програма:</h2>
<section class="intro mt-2 mb-2">
    <div class="gradient-custom-2">
        <div class="mask d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-dark table-bordered mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col">Заглавие</th>
                                        <th scope="col">Формат</th>
                                        <th scope="col">Продължителност</th>
                                        <th scope="col">Ден</th>
                                        <th scope="col">Час</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!--ko foreach: base.items-->
                                    <tr>
                                        <th scope="row" data-bind="text: movie.name"></th>
                                        <td data-bind="text: type"></td>
                                        <td data-bind="text: movie.duration"></td>
                                        <td data-bind="text: getDate(dateTime)"></td>
                                        <td data-bind="text: getHours(dateTime)"></td>
                                        <td><button class="btn btn-success">Запази място</button></td>
                                    </tr>
                                    <!--/ko-->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <nav aria-label="Page navigation example" style="margin-top: 30px; display: flex;justify-content: space-between;align-items: center;">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#" data-bind="click: base.prevPage">Previous</a></li>
                        <!--ko foreach: base.pages-->
                        <li class="page-item" data-bind="css:{active: isActive}"><a class="page-link" href="#" data-bind="text: number, click: $root.base.setPage"></a></li>
                        <!--/ko-->
                        <li class="page-item"><a class="page-link" href="#" data-bind="click: base.nextPage">Next</a></li>
                    </ul>
                    <div>Total records: <span data-bind="text: base.totalCount"></span></div>
                </nav>
            </div>
        </div>
    </div>
</section>
@section Scripts
      {
    <script src="/lib/admin/js/pages/baseService.js"></script>
    <script src="/lib/admin/js/pages/pagination-list-base.js"></script>
    <script src="/lib/frontend/js/program.js"></script>


}