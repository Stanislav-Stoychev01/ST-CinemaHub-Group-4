
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>

<head>
    <title>Welcome to Cinemahub</title>
    <link rel="stylesheet" href="/css/site.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link href="images/favikon4e" rel="icon" type="image/x-icon" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    @RenderSection("AddToHead", required: false)

</head>
<body>
    
    @RenderSection("AddToBody", required: false)

    <section id="nav-bar">

        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-logo" href="/"><img src="/img/logo.jpg"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/AllMovies">ФИЛМИ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Program">ПРОГРАМА</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/TicketPrices">ЦЕНИ</a>
                    </li>
                    <partial name="_LoginPartial"/>
                </ul>
            </div>
        </nav>

        @RenderBody()

    </section>

    <footer class="w-100 py-4 flex-shrink-0">
        <div class="container py-4">
            <div class="row gy-4 gx-5">
                <div class="col-lg-4 col-md-6">
                    <h5 class="h1 text-white">Cinemahub</h5>
                    <p class="small text-muted">Изживей филма с най-доброто кино</p>
                    <p class="small text-muted mb-0">&copy; Всички права запазени CinemaHub България 2022 © <a class="text-primary"</a></p>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h5 class="text-white mb-3">За нас</h5>
                    <ul class="list-unstyled text-muted">
                        <li><a href="#">Начална страница</a></li>
                        <li><a href="#">Свържете се с нас</a></li>
                        <li><a href="#">Работете с нас</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h5 class="text-white mb-3">Информация</h5>
                    <ul class="list-unstyled text-muted">
                        <li><a href="#">Общи правила</a></li>
                        <li><a href="#">Често задавани въпроси</a></li>
                        <li><a href="#">Политика за поверителност</a></li>
                        <li><a href="#">Политика за бисквитките</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </footer>
    <script src="lib/frontend/js/common.js"></script>
    <script src="/lib/knockout.js"></script>
    <script src="/lib/knockout.validation.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
